

<% @products.each do |product| %>
	<div id="produto">

	    <li>
	      <% if product.default_image %>
			  <%= image_tag product.default_image.path, :width => '200px', :height => '200px', :style => "float:left; margin: 0 auto;" %>
		  <% end %>
		  <h4 style="float: left; width: 201px"><%= link_to product.name, product_path(product.permalink) %></h4>
	      <p style="font-size: 25px;width: 201px;"><b><%= link_to "#{number_to_currency product.price}", product_path(product.permalink), :method => :post  %></b><br/>
	      </p>
	    </li>
    </div>
  </ul>
<% end %>